<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="create-users-user" author="andre.nascimento">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tb_user"/>
            </not>
        </preConditions>
        <createTable tableName="tb_user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_pkey"/>
            </column>
            <column name="first_name" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(250)"/>
            <column name="phone" type="VARCHAR(250)"/>
            <column name="created_at" type="datetime"/>
            <column name="updated_at" type="datetime"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
